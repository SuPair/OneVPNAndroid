<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#55a0a0a0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:background="@drawable/select_server_background"
        android:gravity="center">
        <EditText
            android:id="@+id/edtEmail"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/png_email"
            android:drawablePadding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/edittext_bottom_line"
            android:hint="Email"/>
        <EditText
            android:id="@+id/edtPassword"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/png_password"
            android:drawablePadding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/edittext_bottom_line"
            android:hint="Password"/>

        <LinearLayout
            android:id="@+id/linearLogin"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/login_button_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/png_login"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <CheckBox
                android:id="@+id/chkRememberMe"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:button="@drawable/checkbox_listener"
                android:textColor="#ffffff"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Not a OneVPN member?"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/txtSignUp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Free Sign Up"
                android:textColor="#7cbc28"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

