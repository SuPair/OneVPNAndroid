<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp" android:layout_height="wrap_content"
    android:orientation="vertical">

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/linearMenuUniqueID"
            android:background="@drawable/menu_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_about"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Unique ID"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:id="@+id/linearMenuAbout"
            android:background="@drawable/menu_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_about"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="About"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout

            android:clickable="true"
            android:id="@+id/linearMenuChooseServer"
            android:layout_marginTop="5dp"
            android:background="@drawable/menu_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_choose_server"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Choose Server"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/linearMenuProfile"
            android:background="@drawable/menu_selector"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Profile"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/linearMenuFAQ"
            android:background="@drawable/menu_selector"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_faq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="FAQs"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/linearMenuShare"
            android:background="@drawable/menu_selector"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Share"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/linearMenuUpgrade"
            android:background="@drawable/menu_selector"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_upgrade"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Upgrade"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/linearMenuSetting"
            android:layout_marginTop="5dp"
            android:background="@drawable/menu_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Setting"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/linearMenuExit"
            android:background="@drawable/menu_selector"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/png_menu_exit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Exit"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
