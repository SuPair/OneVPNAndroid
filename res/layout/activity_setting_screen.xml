<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/png_background"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#a0303030">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:src="@drawable/png_top_logo"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/png_top_menu"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/png_top_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="30dp">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/png_setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protocol Settings"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </LinearLayout>

        <Spinner
            android:popupBackground="#2f3731"
            android:layout_marginTop="30dp"
            android:id="@+id/protocolSpinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/spinner_selector"
            android:background="@drawable/setting_spinner"></Spinner>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            <RadioButton
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:id="@+id/radioTCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_listener"
                android:background="@android:color/transparent"
                android:checked="true"
                android:paddingLeft="5dp"
                android:text="TCP"
                android:textSize="20sp"/>
            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                />
            <RadioButton
                android:scaleX="1.2"
                android:scaleY="1.2"

                android:id="@+id/radioUDP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_listener"
                android:background="@android:color/transparent"
                android:checked="false"
                android:paddingLeft="5dp"
                android:text="UDP"
                android:textSize="20sp"/>
            </RadioGroup>
        </LinearLayout>

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/ModeSpinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:spinnerMode="dropdown"
            android:popupBackground="#2f3731"
            android:dropDownSelector="@drawable/spinner_selector"
            android:background="@drawable/setting_spinner"></Spinner>

        <EditText
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:id="@+id/edtPortNo"
            android:singleLine="true"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/png_setting_port_edit_icon"
            android:drawablePadding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/edittext_bottom_line"
            android:textColorHint="#ffffff"
            android:hint="Port No"/>
        <CheckBox
            android:layout_marginTop="20dp"
            android:id="@+id/chkAutoReconnect"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Reconnect"
            android:button="@drawable/checkbox_listener"
            android:textColor="#ffffff"/>
        <CheckBox
            android:layout_marginTop="20dp"
            android:id="@+id/chkLogWindow"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Logs"
            android:button="@drawable/checkbox_listener"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:text="Save"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_listener"/>
    </LinearLayout>

</LinearLayout>
